<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">

    <com.sweet.qianqian.common.tab.SlidingTabLayout
        android:id="@+id/main_sliding_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        tl:tl_tab_padding="5dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textsize="18sp"
        tl:tl_textSelectColor="@android:color/holo_orange_light"
        tl:tl_textUnselectColor="@android:color/darker_gray"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_color="@android:color/holo_orange_light"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
